{
  "name": "@rcrsr/mcp-policy-server",
  "version": "0.3.2",
  "description": "MCP server providing token-efficient access to policy documentation via § notation",
  "main": "dist/index.js",
  "bin": {
    "@rcrsr/mcp-policy-server": "dist/index.js",
    "mcp-policy-server": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcrsr/mcp-policy-server.git"
  },
  "bugs": {
    "url": "https://github.com/rcrsr/mcp-policy-server/issues"
  },
  "homepage": "https://github.com/rcrsr/mcp-policy-server#readme",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run format:check && npm run lint && npm run typecheck",
    "pre-commit:fix": "npm run format && npm run lint:fix && npm run typecheck",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "test:legacy": "node test.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "policy",
    "standards",
    "guidelines",
    "ai-agents",
    "claude"
  ],
  "license": "GPL-3.0-or-later",
  "author": "André Bremer",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "docs/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.24.3",
    "fast-glob": "3.3.3"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.9.1",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "eslint": "9.38.0",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  }
}
