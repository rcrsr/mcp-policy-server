{
  "name": "@rcrsr/mcp-policy-server",
  "version": "0.6.4",
  "description": "MCP server providing token-efficient access to policy documentation via § notation",
  "main": "dist/index.js",
  "bin": {
    "@rcrsr/mcp-policy-server": "dist/index.js",
    "mcp-policy-server": "dist/index.js",
    "policy-hook": "dist/hook.js",
    "policy-fetch": "dist/hook.js",
    "policy-cli": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcrsr/mcp-policy-server.git"
  },
  "bugs": {
    "url": "https://github.com/rcrsr/mcp-policy-server/issues"
  },
  "homepage": "https://github.com/rcrsr/mcp-policy-server#readme",
  "scripts": {
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run format:check && npm run lint && npm run typecheck",
    "pre-commit:fix": "npm run format && npm run lint:fix && npm run typecheck",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "policy",
    "standards",
    "guidelines",
    "ai-agents",
    "claude"
  ],
  "license": "GPL-3.0-or-later",
  "author": "André Bremer",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "docs/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
